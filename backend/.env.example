# Backend environment configuration

# App
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h

# Email (Resend)
FROM_EMAIL=no-reply@example.com
RESEND_API_TOKEN=your-resend-api-token

# Database (SQL Server)
# If using a named instance, set DB_SERVER and DB_INSTANCE (e.g., SQLEXPRESS)
# Otherwise, set DB_SERVER only (e.g., 192.168.0.25 or localhost)
DB_SERVER=localhost
DB_INSTANCE=
DB_PORT=1433
DB_NAME=CMMS
DB_USER=sa
DB_PASSWORD=your_password
DB_ENCRYPT=true
DB_TRUST_SERVER_CERT=true
DB_REQUEST_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=30000
DB_POOL_MAX=10
DB_POOL_MIN=0
DB_POOL_IDLE_TIMEOUT=30000

# LINE Messaging API (for OA push)
LINE_CHANNEL_ACCESS_TOKEN=
LINE_CHANNEL_SECRET=
